<% title "Resource" %>
<% if can? :update, @resource %>
  <% edit_text "Edit Resource" %>
  <% edit_path edit_resource_path(@resource) %>
<%end%>

<section>
  <%- if @resource.file_content_type == 'image/jpeg' %>
    <%= image_tag @resource.file.url(:medium) %>
  <%-end%>
  <br>
  <strong>Name:</strong>
  <%= @resource.file_file_name %>
  <br>
  <strong>Type:</strong>
  <%= @resource.file_content_type %>
</section>

<% title "Character Templates" %>

<table>
  <tr>
    <th>Name</th>
    <th>Player</th>
    <th>Created</th>
    <th>Updated</th>
    <th>Actions</th>
  </tr>
  <% @character_templates.each do |c| %>
    <tr>
      <td><%=c.name%></td>
      <td><%=c.user.display_name%></td>
      <td><%=c.created_at%></td>
      <td><%=c.updated_at%></td>
      <td>
        <%= link_to "Show", c %>
         | 
         <%= link_to "Edit", edit_character_template_path(c) %>
      </td>
    </tr>
  <%end%>
</table>
<br>
<%= link_to "Create new character", new_character_template_path -%>


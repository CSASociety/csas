<%= form_for @campaign do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :link %><br />
    <%= f.text_field :link %>
  </p>
  <p>
    <%= f.label :intro %><br />
    <%= f.text_area :intro %>
    </p>
  <p>
    <%= f.label :game %>
    <%= f.collection_select :game_id, Game.all, :id, :title, prompt: true, required: true %>
  </p>
  <p>
    <%= f.label :image -%>
    <%= f.file_field :image -%>
  </p>
  <p><%= f.submit %></p>
<% end %>


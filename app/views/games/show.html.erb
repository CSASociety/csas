<% title "Game" %>

<%= image_tag @game.image.url(:medium) %>

<p>
  <strong>Title:</strong>
  <%= @game.title %>
</p>
<p>
  <strong>Description:</strong>
  <%= @game.description %>
</p>
<p>
  <strong>Link:</strong>
  <%= @game.link %>
</p>

<p>
  <%= link_to "Edit", edit_game_path(@game) %> |
  <%= link_to "Destroy", @game, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", games_path %>
</p>

<% title @game.title  %>

<section id="main">
  <div id="main_image">
    <%-if @game.image.present? %>
      <%= image_tag @game.image.file.url(:medium) %>
    <%-end%>
  </div>

  <div id="main_info">
    <p>
      <strong>Description:</strong>
      <%= @game.description %>
    </p>
    <p>
      <strong>Link:</strong>
      <%= @game.link %>
    </p>
    <p><%= link_to "Edit", edit_game_path(@game) %></p>
  </div>
</section>

<section class="attachments">
  <h2> Attachemnts </h2>
  <ul>
    <%- @game.attachments.each do |attachment| %>
      <li><%= link_to attachment.title, attachment.resource.file.url %></li>
    <%- end %>
  </ul>
</section>
<% if can? :update, @game %>
  <%= modal_dialog :id => "attach_to_game",
    :header => { :show_close => true, :dismiss => 'modal', :title => "Attach to #{@game.title}" },
    :body => render(partial: "attachments/attach", locals: {item: @game, attachment: Attachment.new}),
    :footer =>  content_tag(:button, 'Cancel', :class => 'btn btn-primary', :data => { :dismiss => 'modal' })
  %>
<%-end%>


<% content_for :page_sidebar do %>
  <% if can? :update, @game%>
    <%= content_tag :a, "Attach File", :href => "#attach_to_game", :class => 'btn', :data => {:toggle => 'modal'} %>
  <%- end %>
<%end%>

